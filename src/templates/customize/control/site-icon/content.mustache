{{=<% %>=}}
<label for="{{ data.settings['default'] }}-button">
	<# if ( data.label ) { #>
		<span class="customize-control-title">{{ data.label }}</span>
	<# } #>
	<# if ( data.description ) { #>
		<span class="description customize-control-description">{{{ data.description }}}</span>
	<# } #>
</label>

<# if ( data.attachment && data.attachment.id ) { #>
	<div class="attachment-media-view">
		<# if ( data.attachment.sizes ) { #>
			<div class="site-icon-preview">
				<div class="favicon-preview">
					<%={{ }}=%><img src="{{{ browser_preview_src }}}" class="browser-preview" width="182" alt="" />{{=<% %>=}}
					<div class="favicon">
						<img src="{{ data.attachment.sizes.full.url }}" <%={{ }}=%>alt="{{ l10n.preview_as_browser_icon }}"/>
					</div>
					<%={{ }}=%><span class="browser-title" aria-hidden="true">{{ blogname }}</span>{{=<% %>=}}
				</div>
				<img class="app-icon-preview" src="{{ data.attachment.sizes.full.url }}" <%={{ }}=%>alt="{{ l10n.preview_as_app_icon }}"{{=<% %>=}}/>
			</div>
		<# } #>
		<div class="actions">
			<# if ( data.canUpload ) { #>
				<button type="button" class="button remove-button"><%={{ }}=%>{{{ button_label.remove }}}{{=<% %>=}}</button>
				<button type="button" class="button upload-button" id="{{ data.settings['default'] }}-button"><%={{ }}=%>{{{ button_label.change }}}{{=<% %>=}}</button>
				<div style="clear:both"></div>
			<# } #>
		</div>
	</div>
<# } else { #>
	<div class="attachment-media-view">
		<%={{ }}=%><div class="placeholder">{{{ button_label.placeholder }}}</div>{{=<% %>=}}
		<div class="actions">
			<# if ( data.defaultAttachment ) { #>
				<button type="button" class="button default-button"><%={{ }}=%>{{{ button_label.default }}}{{=<% %>=}}</button>
			<# } #>
			<# if ( data.canUpload ) { #>
				<button type="button" class="button upload-button" id="{{ data.settings['default'] }}-button"><%={{ }}=%>{{{ button_label.select }}}{{=<% %>=}}</button>
			<# } #>
			<div style="clear:both"></div>
		</div>
	</div>
<# } #>
